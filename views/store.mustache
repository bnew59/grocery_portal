<!DOCTYPE HTML>
<html>
  <head>
    <link href="/inventory.css" type="text/css" rel="stylesheet" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>
<body >

  {{#message}}
    <p>{{message}}<p>
    <a href="/stores">back to stores</a>
  {{/message}}

  {{#store}}
  
  <div class="jumbotron">
   <h1>Create An Aisle In {{store.name}}</h1>

  <form action="/aisle" method="POST">
    <input name="storeId" hidden value="{{store.id}}" />
    <input name="name" placeholder="Name of Aisle" />
    <input class="btn btn-primary btn-lg" type="submit" />
  </form>

</div>

  <div class="jumbotron">
  <h1>Create An Item</h1>

  <form action="/product" method="POST">

    <select name="aisle">
      {{#aisles}}
        <option value="{{id}}">{{name}}</option>
      {{/aisles}}
    </select>

    <input hidden name="storeId" value="{{id}}" />
    <input type="text" name="name" placeholder="Item" />
    <input type="number" name="quantity" placeholder="Quantity" />
    <input type="float" name="price" placeholder="Price" />
    <input type="submit" />

  </form>
</div>
  {{#aisles}}
  
    <ul>
      <div class="jumbotron">
        <h1>{{name}}</h1>
      

      {{#products}}

  <li class="list-group-item">{{name}}</li>

      {{/products}}

    </ul>
    <br/>

  {{/aisles}}

  {{/store}}

</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</html>